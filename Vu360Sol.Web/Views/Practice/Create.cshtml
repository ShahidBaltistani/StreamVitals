
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Theme2Layout.cshtml";
}


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<section id="content">
    <div class="content-wrap">
        <div class="container clearfix">

            <div class="row" style=" margin-bottom: 190px; margin-top: 22px;">
                <div class="col-lg-3"></div>
                <div class="col-lg-6">
                    <div class="card mb-0">
                        <div class="card-body" style="padding: 40px;">
                            <form id="login-form" name="login-form" class="mb-0" action="Create" method="post" autocomplete="off">

                                <h3>Add Practice</h3>

                                <div class="row">
                                    <div class="col-12 form-group">
                                        <label for="Email" id="lblEmail">Enter Name</label>
                                        <input type="text" id="Name" name="Name" value="" class="form-control" required onblur="return chkblnk('Name','errorName','lblName')" />
                                        <span id="errorName" class="text-danger"></span>
                                    </div>

                                    <div class="col-12 form-group">
                                        <button id="btnLoginSubmit" type="submit" class="button button-border button-white button-light button-large button-rounded text-right m-0"><span>Add</span> <i class="icon-angle-right"></i></button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3"></div>
            </div>
                        
               

        </div>
    </div>
</section>
